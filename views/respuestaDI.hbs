<div class="form-w3layouts">
    <!-- page start-->
    <!-- page start-->
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Agregar Respuestas
                </header>

                <div class="panel-body">

                    <form class="form-horizontal bucket-form" method="post" action="/respuestaDI" id="cargarTestDI">

                        <div class="form-group">
                            <label class="col-sm-3 control-label">Seleccione la Pregunta</label>
                            <div class="col-sm-6">
                                <select id="mySelect" name="fk_pregunta">

                                    {{#each pregunta}}
                                    <option value={{id}} id="fk_pregunta" name="fk_pregunta"> {{texto}} </option>

                                    {{/each}}
                                </select>
                            </div>
                        </div>


                        <div class="panel-body">
                            <div class="position-center">

                                <div class="form-group">
                                    <label for="exampleInputFile">Respuesta 1</label>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" id="texto" name="texto">
                                    </div>
                                    <input type="file" name="imagen_respuesta">
                                    <label><input type="checkbox" name="validacion"> Correcta </label><br>


                                </div>

                                <div class="form-group">
                                    <label for="exampleInputFile">Respuesta 2</label>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" id="texto2" name="texto2">
                                    </div>
                                    <input type="file" name="imagen_respuesta2">
                                    <label><input type="checkbox" name="validacion2"> Correcta </label><br>
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputFile">Respuesta 3</label>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" id="texto3" name="texto3">
                                    </div>
                                    <input type="file" name="imagen_respuesta3">
                                    <label><input type="checkbox" name="validacion3"> Correcta </label><br>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-offset-2 col-lg-10">
                                        <button class="btn btn-secondary" type="button"
                                            onclick="cerrar()">Cancelar</button>
                                        <button class="btn btn-primary" type="submit" id="cargarTestDI">Guardar</button>

                                    </div>
                                </div>

                            </div>
                    </form>

            </section>

        </div>


        <!-- page end-->
    </div>

</div>